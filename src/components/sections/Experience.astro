---
import Section from "../Section.astro"

import { work, titlesSections } from "@cv"
---

<Section title={titlesSections.Experiencie}>
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary }) => {
          const startYear = new Date(startDate).getFullYear()
          const startMonth = new Date(startDate).toLocaleString('en-EN', { month: "short" });
          const endMonth = new Date(endDate).toLocaleString('en-EN', { month: "short" });
          const endYear =
            endDate != null ? new Date(endDate).getFullYear() : "Actual"
          const years = `${startMonth} ${startYear} - ${endMonth} ${endYear}`

          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>{name}</h3>
                    <h4>{position}</h4>
                  </div>

                  <time>{years}</time>
                </header>

                <footer>
                  <p>{summary}</p>
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
  }
</style>
